@model IEnumerable<TuningStudioSite.Models.DbEntities.Supplier>

@{
    ViewBag.Title = "Офіційні поставщики";
}

<h2>Офіційні поставщики</h2>

<p>
    @Html.ActionLink("Додати поставщика", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Назва компанії
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fax)
        </th>
        <th>
            Телефон
        </th>
        <th>
            Адреса
        </th>
        <th>
            Інтернет каталог
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteCatalog)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Детальніше", "Details", new { id = item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
