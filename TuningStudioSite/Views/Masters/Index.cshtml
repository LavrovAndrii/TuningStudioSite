@model IEnumerable<TuningStudioSite.Models.DbEntities.Master>

@{
    ViewBag.Title = "Список майстрів";
}

<h2>Список майстрів</h2>

<p>
    @Html.ActionLink("Додати нового майстра", "Create")
</p>
<table class="table">
    <tr>
        <th>
            П.І.Б Майстра
        </th>
        <th>
            Зарплата
        </th>
        <th>
            Телефон
        </th>
        <th>
            Адреса проживання
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Money)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Детальніше", "Details", new { id = item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
