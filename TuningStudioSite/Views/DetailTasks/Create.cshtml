@model TuningStudioSite.Models.DbEntities.DetailTask

@{
    ViewBag.Title = "Деталі для завдань";
}

<h2>Перелік деталей для вирішення поставленого завдання</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IdDetail, "Необхідно", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdDetail", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdDetail, "", new { @class = "text-danger" })
                для того, щоб вирішити
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdTask, "завдання", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdTask", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdTask, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Показати весь список деталей", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
