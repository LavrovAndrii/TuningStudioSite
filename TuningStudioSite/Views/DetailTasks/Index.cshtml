@model IEnumerable<TuningStudioSite.Models.DbEntities.DetailTask>

@{
    ViewBag.Title = "Список деталей для вирішення завдання";
}

<h2>Список деталей для вирішення завдання</h2>

<p>
    @Html.ActionLink("Замовити ще деталі для завдання", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Деталі
        </th>
        <th>
            Завдання
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Detail.NameDetail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Task.Title)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Детальніше", "Details", new { id = item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
