@model IEnumerable<TuningStudioSite.Models.DbEntities.Client>

@{
    ViewBag.Title = "База клієнтів";
}

<h2>База клієнтів</h2>

<p>
    @Html.ActionLink("Додати нового клієнта", "Create")
</p>
<table class="table">
    <tr>
        <th>
            П.І.Б Клієнта
        </th>
        <th>
            Email
        </th>
        <th>
            Телефон
        </th>
        <th>
            Марка машини
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Детальніше", "Details", new { id = item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
