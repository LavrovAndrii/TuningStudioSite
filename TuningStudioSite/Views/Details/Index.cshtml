@model IEnumerable<TuningStudioSite.Models.DbEntities.Detail>

@{
    ViewBag.Title = "Доступні деталі";
}

<h2>Доступні деталі</h2>

<p>
    @Html.ActionLink("Додати нову деталь", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Виробник
        </th>
        <th>
            Назва деталі
        </th>
        <th>
            Ціна деталі
        </th>
        <th>
            Кількість в партії
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameDetail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Детальніше", "Details", new { id = item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
